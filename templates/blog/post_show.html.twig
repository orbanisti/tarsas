{% extends 'base.html.twig' %}

{% block body_id 'blog_post_show' %}
{% block title %}{{ post.title }}{% endblock %}

{% block body %}
    <div class="container pt-5 pb-5">
        <div class="row">
            <div class="col-md-12">
                <h1>{{ post.title }}</h1>

                <p class="post-metadata">
                    <span class="metadata"><i class="fa fa-calendar"></i> {{ post.createdAt|format_datetime('long', 'medium', '', 'UTC') }}</span>
                </p>
                {{ post.content|raw }}
            </div>
        </div>
    </div>
{% endblock %}

