{% extends 'base.html.twig' %}

{% block body_id 'blog_index' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1 class="mb-5 mt-5">Blog</h1>
                {% for post in paginator.results %}
                    <article class="post">
                        <h2>
                            <a href="{{ path('blog_post', {url: post.url}) }}">
                                {{ post.title }}
                            </a>
                        </h2>

                        <p class="post-metadata">
                            <span class="metadata"><i class="fa fa-calendar"></i> {{ post.createdAt|format_datetime('long', 'medium', '', 'UTC') }}</span>
                        </p>

                        <p>{{ post.lead }}</p>
                    </article>
                {% else %}
                    <div class="well">{{ 'post.no_posts_found'|trans }}</div>
                {% endfor %}

                {% if paginator.hasToPaginate %}
                    <div class="navigation text-center">
                        <ul class="pagination">
                            {% if paginator.hasPreviousPage %}
                                <li class="prev"><a href="{{ path('blog_index_paginated', {page: paginator.previousPage}) }}" rel="previous"><i
                                                class="fa fw fa-long-arrow-left"></i> {{ 'Előző'|trans }}</a></li>
                            {% else %}
                                <li class="prev disabled"><span><i class="fa fw fa-arrow-left"></i> {{ 'Előző'|trans }}</span></li>
                            {% endif %}

                            {% for i in 1..paginator.lastPage %}
                                {% if i == paginator.currentPage %}
                                    <li class="active"><span class="bg-primary p-2 m-2 text-white">{{ i }} <span class="sr-only">{{ 'Jelenlegi'|trans }}</span></span>
                                    </li>
                                {% else %}
                                    <li><a class="p-2 m-2" href="{{ path('blog_index_paginated', {page: i}) }}">{{ i }}</a></li>
                                {% endif %}
                            {% endfor %}

                            {% if paginator.hasNextPage %}
                                <li class="next"><a href="{{ path('blog_index_paginated', {page: paginator.nextPage}) }}"
                                                    rel="next">{{ 'Következő'|trans }} <i class="fa fw fa-arrow-right"></i></a></li>
                            {% else %}
                                <li class="next disabled"><span>{{ 'Következő'|trans }} <i class="fa fw fa-arrow-right"></i></span></li>
                            {% endif %}
                        </ul>
                    </div>
                {% endif %}
            </div>
        </div>

    </div>

{% endblock %}

{% block sidebar %}
    {{ parent() }}

    {{ show_source_code(_self) }}
    {{ include('blog/_rss.html.twig') }}
{% endblock %}
