<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <title>{% block title %}Everest Business Services{% endblock %}</title>
    <link rel="alternate" type="application/rss+xml" title="{{ 'rss.title'|trans }}" href="{{ path('blog_rss') }}">
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
</head>

<body id="{% block body_id %}{% endblock %}" class="">
{{ include('frontend/drawerMenu.html.twig') }}
{% block header %}
    <header>
        <nav class="navbar navbar-expand-lg " role="navigation">
            <div class="container-fluid">
                <a class="navbar-brand" href="{{ path('homepage') }}">
                    <img class="logo" src="{{ asset('build/images/logo.png') }}"/>
                </a>
                <a href="#drawerMenu" data-toggle="drawer" aria-foldedopen="false" aria-controls="drawerMenu" class="navbar-toggler">
                    <img class="mt-1" src="{{ asset('build/images/menu-bars.png') }}" width="50">
                </a>
                <div class="navbar-collapse collapse" id="main-nav">
                    {% include 'frontend/menu.html.twig' %}
                </div>
            </div>
        </nav>
    </header>
{% endblock %}
<div class="body-container">
    {% block body %}
        <div class="container ">
            <div class="row">
                <div id="main" class="col-sm-9">
                    {{ include('default/_flash_messages.html.twig') }}

                    {% block main %}{% endblock %}
                </div>

                <div id="sidebar" class="col-sm-3">
                    {% block sidebar %}
                        {{ render_esi(controller('Symfony\\Bundle\\FrameworkBundle\\Controller\\TemplateController::templateAction', {
                            'template': 'blog/about.html.twig',
                            'sharedAge': 600,
                            '_locale': app.request.locale
                        })) }}
                    {% endblock %}
                </div>
            </div>
        </div>
    {% endblock %}
</div>
