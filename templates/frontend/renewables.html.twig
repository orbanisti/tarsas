        <script type="text/javascript">

            let europeMap = null;
            let centerX = -280;
            let centerY = null;
            let mapElement = $("#vmap");

            function setMapCenter() {
                if (window.innerWidth > 465) {
                    centerX = -234;
                }
                if (window.innerWidth > 765) {
                    centerX = -196;
                }
                if (window.innerWidth > 960) {
                    centerX = -141;
                }
                if (window.innerWidth > 1200) {
                    centerX = -103;
                }
            }

            setMapCenter()

            $(document).ready(function () {
                europeMap = $('#vmap').vectorMap({
                    map: 'europe_en',
                    backgroundColor: '#fff',
                    color: '#ffffff',
                    hoverColor: '#000',
                    enableZoom: false,
                    panOnDrag: false,
                    values: {"hu": 100, "cz": 100},
                    scaleColors: ['#224694'],

                });
                europeMap.setScale(2);
                europeMap.transX = centerX;
                europeMap.transY = -186;
                europeMap.applyTransform();
                mapElement.unbind('click');
                mapElement.unbind('touchstart');
                mapElement.unbind('touchend');
                mapElement.unbind('touchmove');
                $(document).ready(function () {
                    if (window.innerWidth > 1050) {
                        $('#fullPage').fullpage({
                            //options here
                            anchors: ['first', 'second', 'third', 'fourth', 'fifth', 'sixth', 'footer'],
                            navigation: true,
                            navigationPosition: 'left',
                            resize: false,
                            fitToSection: true,
                            scrollOverflow: true,
                            css3: true,
                            scrollingSpeed: 1000,
                            scrollSectionToBottomFromBottom: false,
                            bigSectionsDestination: 'bottom',
                            onLeave: function (origin, destination, direction) {
                                console.log(destination);
                                if (destination === 2) {
                                    initLettersAnimation()
                                }
