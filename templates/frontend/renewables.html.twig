                                    initCountUpAnimation()
                                }
                                AOS.init()
                            },
                            afterLoad: function () {
                                $('.fp-table.active .aos-init').addClass('aos-animate');
                            },

                        });
                        //
                        // //methods
                        $.fn.fullpage.setAllowScrolling(true);
                    } else {
                        $('.secondSection').attr('id', 'second')
                    }
                });
            });

        </script>
